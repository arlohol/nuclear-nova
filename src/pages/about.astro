---
import '../styles/global.css'
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

const pageTitle = "About Me Dynamic";

const identity = {
  firstName: "Hank",
  country: "US",
  occupation: "Architect",
  hobbies: ["photography", "birdwatching", "baseball"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Writing Docs"];
const happy = true;
const finished = false;
const goal = 3;
const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---
<head>
    <title>Home Blog</title>
    <style define:vars={{skillColor, fontWeight, textCase}}>
        h1 {
            color: purple;
            font-size: 4rem;
        }
        .skill {
            color: var(--skillColor);
            font-weight: var(--fontWeight);
            text-transform: var(--textCase);
        }
    </style>
</head>
<body>
    <Header />
    <h1>My Site</h1>
    <h1>{pageTitle}</h1>
    <h2>And my new site!</h2>
    <p>Work in progress. Check back soon!</p>
    <p>Here are a few facts about me:</p>
    <ul>
        <li>My name is {identity.firstName}</li>
        <li>I live in {identity.country} and I work as a {identity.occupation}.</li>
        {
            identity.hobbies.length >= 2 && <li>Two of my hobbies are {identity.hobbies[0]} and {identity.hobbies[1]}</li>
        }
    </ul>
    <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
    {happy && <p>I am happy to be learning.</p>}
    {finished && <p>I finished learning!</p>}
    {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}
    <Footer />
</body>
